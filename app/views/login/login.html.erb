<% if flash[:error] %>
  <div class="ui-body ui-body-<%= error_theme %> ui-corner-all login-error">
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_tag root_path, class: 'ui-body ui-body-' + theme + ' ui-corner-all' do %>
  <fieldset>
    <div data-role="fieldcontain" class="ui-hide-label">
      <label for="login">Login :</label>
      <input type="text" name="login" value="" placeholder="Login" />
    </div>
    
    <div data-role="fieldcontain" class="ui-hide-label">
      <label for="password">Mot de passe :</label>
      <input type="password" name="password" value="" placeholder="Mot de passe" />
    </div>
    
    <!--
    <div data-role="fieldcontain" class="ui-hide-label">
      <label for="cas">CAS (optionnel) :</label>
      <input type="text" name="cas" value="" placeholder="CAS (optionnel)" />
    </div>
    -->
    
    <button type="submit" name="submit" data-icon="check" data-iconpos="right">Connexion</button>
    
  </fieldset>
<% end %>
